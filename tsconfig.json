{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,

    "target": "ES2022",              // ⬅️ was ES6; BigInt needs ES2020+
    "module": "esnext",
    "moduleResolution": "bundler",

    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "types": ["node"],               // ⬅️ include Node types (for express server)
    "plugins": [{ "name": "next" }]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
